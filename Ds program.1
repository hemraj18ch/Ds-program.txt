#include <stdio.h>

void combineTwo(int first[], int firstSize, int second[], int secondSize, int result[])
{
    int a = 0, b = 0, c = 0;

    while (a < firstSize && b < secondSize)
    {
        if (first[a] < second[b]) 
        {
            result[c++] = first[a++];
        }
        else
        {
            result[c++] = second[b++];
        }
    }

    while (a < firstSize)
    {
        result[c++] = first[a++];
    }

    while (b < secondSize)
    {
        result[c++] = second[b++];
    }
}

void combineThree(int first[], int firstSize, int second[], int secondSize, int third[], int thirdSize, int result[])
{
    int temp[firstSize + secondSize];
    combineTwo(first, firstSize, second, secondSize, temp);
    combineTwo(temp, firstSize + secondSize, third, thirdSize, result);
}

